    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.2",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.469.0",
    "next": "16.1.1",
    "openai": "^4.77.4",
    "ora": "^5.4.1",
    "p-limit": "^7.2.0",
    "puppeteer": "^24.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/ffmpeg": "^1.0.7",
    "@types/node": "^20",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitest/ui": "^4.0.16",
    "esbuild": "^0.24.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"

{
  "name": "@winterfx/pt",
  "version": "1.0.1",
  "description": "CLI tool for podcast transcription with AI summary",
  "bin": {
    "pt": "./cli/bin/podcast-transcribe.js"
  },
  "files": [
    "cli/bin",
    "cli/dist"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cli": "tsx cli/src/index.ts",
    "pt": "tsx cli/src/index.ts",
    "build:cli": "esbuild cli/src/index.ts --bundle --platform=node --target=node20 --outfile=cli/dist/index.js --alias:@=./src --external:puppeteer",
